<UserControl x:Class="Bosco.XAML.Controls.Sorts.MainSortView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bosco.XAML.Controls.Sorts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="15">
            <TextBlock Text="ORDENAR POR"/>
            <Separator Height="1"/>
        </StackPanel>
        
        <ContentPresenter Margin="15 20 15 0"
                          Grid.Row="1"
                          Content="{Binding Path=SortContent, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainSortView}}}"/>

        <Button Grid.Row="2"
                Content="ORDENAR"
                Command="{Binding Path=SortCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainSortView}}}"
                HorizontalAlignment="Right"
                Margin="15"/>

    </Grid>
</UserControl>
