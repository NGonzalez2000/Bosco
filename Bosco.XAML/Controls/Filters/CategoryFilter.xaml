<UserControl x:Class="Bosco.XAML.Controls.Filters.CategoryFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:filters="clr-namespace:Bosco.Core.Models.FilterModels;assembly=Bosco.Core"
             xmlns:local="clr-namespace:Bosco.XAML.Controls.Filters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=filters:CategoryFilterModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Columns="2">
        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Nombre"
                 CharacterCasing="Upper"
                 Text="{Binding Path=Category.Name,UpdateSourceTrigger=PropertyChanged}"
                 Margin="15 0"/>
    </UniformGrid>
</UserControl>
